{
	"overrides": [
		{
			"files": ["*.ts", "*.tsx"],
			"parserOptions": {
				"sourceType": "module",
				"project": ["./tsconfig.json"]
			},
			"parser": "@typescript-eslint/parser",
			"plugins": ["@typescript-eslint"],
			"extends": [
				"airbnb-typescript/base",
				"plugin:@typescript-eslint/recommended",
				"prettier"
			],
			"rules": {
				"@typescript-eslint/no-explicit-any": "off"
			},
			"settings": {
				"import/resolver": {
					"node": {
						"extensions": [".ts"]
					}
				}
			}
		}
	]
}
